@model WebApplication_Store.ViewModels.OrdemView

@{
    ViewBag.Title = "Nova Ordem";
}

<h2>Nova Ordem</h2>

<h5>@ViewBag.Error</h5>
<h5>@ViewBag.Mensagem</h5>

@using (Html.BeginForm("NovaOrdem", "Ordens", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.Customizar.IDCustomizar, "Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDCustomizar", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Customizar.IDCustomizar, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ActionLink("Adicionar Produto", "AddProduto", new { }, new { @class="btn btn-primary" }) 


                <input type="submit" value="Cadastrar" id="NovaOrdem" class="btn btn-success" />

    </div>
}

<h4>Detalhes do Pedido</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Descricao)
        </th>
        <th>
            @Html.DisplayName("Preço")
        </th>
        <th>
            @Html.DisplayName("Quantidade")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Valor)
        </th>
        <th></th>
    </tr>

    @for(int i=0; i < Model.Produtos.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Produtos[i].Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Produtos[i].Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Produtos[i].Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Produtos[i].Valor)
            </td>
            
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = Model.Produtos[i].IDProduto }) 
                @Html.ActionLink("Excluir", "Delete", new { id = Model.Produtos[i].IDProduto })
            </td>
        </tr>
    }

</table>